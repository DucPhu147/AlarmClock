<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian báo lại"
        android:textSize="20dp"
        android:layout_marginVertical="20dp"
        android:textColor="@color/colorAccent"/>
    <View
        android:layout_width="500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/Grey"
        android:layout_height="0.1dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/NPsnoozeTime"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/colorAccent"
            android:id="@+id/txtSnoozeTime"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="7dp"
            android:text="Khoảng thời gian"
            app:layout_constraintRight_toLeftOf="@id/txtSnoozeCount"/>
        <NumberPicker
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp"
            app:layout_constraintRight_toLeftOf="@+id/NPsnoozeCount"
            android:id="@+id/NPsnoozeTime"
            android:layout_height="wrap_content">
        </NumberPicker>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/NPsnoozeCount"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/txtSnoozeCount"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="7dp"
            android:text="Số lần báo lại"
            app:layout_constraintLeft_toRightOf="@id/NPsnoozeTime"/>

        <NumberPicker
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp"
            app:layout_constraintLeft_toRightOf="@+id/NPsnoozeTime"
            android:id="@+id/NPsnoozeCount"
            android:layout_height="wrap_content">
        </NumberPicker>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:stretchColumns="*">
        <TableRow android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Hủy"
                android:textSize="13dp"
                android:id="@+id/btnSnoozeTimeHuy"
                android:background="@drawable/button_background"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Xác nhận"
                android:textSize="13dp"
                android:id="@+id/btnSnoozeTimeXacNhan"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button_background"/>
        </TableRow>
    </TableLayout>
</LinearLayout>